{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [ "**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
